# ============ Discord 設定 (必填) ============
DISCORD_TOKEN=你的Discord機器人Token
DISCORD_CHANNEL_ID=你的Discord頻道ID

# ============ Line Bot 設定 (必填) ============
LINE_CHANNEL_SECRET=你的Line頻道密鑰
LINE_CHANNEL_ACCESS_TOKEN=你的Line存取權杖
LINE_GROUP_ID=你的Line群組ID

# ============ Google Gemini AI 設定 (必填) ============
GOOGLE_API_KEY=你的Google_Gemini_API_Key

# ============ 伺服器設定 (選用) ============
PORT=8080
HOST=0.0.0.0
DEBUG=False

# ============ 配額限制 (選用) ============
# AI 每人每日對話次數限制
AI_DAILY_LIMIT=20
# AI 每分鐘請求次數限制
AI_RPM=30
# Line API 每月訊息限制
LINE_MONTHLY_LIMIT=500
# Line 配額警告閾值 (0.0-1.0)
LINE_WARNING_THRESHOLD=0.9

# ============ AI 參數 (選用) ============
# 創意度 (0.0-1.0)
AI_TEMPERATURE=0.7
# 採樣範圍 (0.0-1.0)
AI_TOP_P=0.8
# 候選詞數量
AI_TOP_K=40
# 回應長度限制(tokens)
AI_MAX_TOKENS=200

# ============ 對話設定 (選用) ============
# 對話超時時間(秒) - 超過此時間會重置對話歷史
CONVERSATION_TIMEOUT=1800
# 最大對話歷史長度
MAX_HISTORY=10

# ============ 相似度檢測 (選用) ============
# 訊息相似度閾值 (0.0-1.0)
SIMILARITY_THRESHOLD=0.8
# 訊息長度差異容忍值
LENGTH_DIFF=5
